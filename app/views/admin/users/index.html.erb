<h1>従業員一覧</h1>
<table border="1" align="center" class="main-table">
    <thead>
      <tr>
        <th>社員ID</th>
        <th>氏名</th>
        <th>email</th>
        <th>権限</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |u, i| %>
        <tr>
          <td><%= "#{u.employee_id}" %></td>
          <td><%= "#{u.firstname} #{u.lastname}" %></td>
          <td><%= "#{u.email}" %></td>
          <% if u.admin == false %>
            <td><%= "一般ユーザー" %></td>
          <% else %>
            <td><%= "管理者ユーザー" %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
</table>


